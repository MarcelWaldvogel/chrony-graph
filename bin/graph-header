#!/bin/bash

BASENAME=$1
TERMINAL=$2
FORMAT=$3
TITLE=$4
CUSTOM=$5

cat <<EOF
set terminal $TERMINAL size 900,600
set xdata time
set timefmt "%s"
set output "$BASENAME.$TERMINAL"
set grid
set xlabel "Time"
set format x "%d-%H:%M"
set xtic rotate by -45 scale 0
set ylabel ""
set ytics format "$FORMAT" nomirror
set title "$TITLE" font "Arial,24"
set key top right box
$CUSTOM
set lmargin 12
set rmargin 12
plot \\
EOF
